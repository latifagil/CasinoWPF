<Page x:Class="CasinoWPF.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasinoWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="#FFA3A3A3" Margin="0,0,0,-110">

        <StackPanel Margin="176,70,188,109">

            <TextBlock Text="First Name:" Width="285"/>
            <TextBox x:Name="name" Width="285" Background="#FFD9D9D9" />

            <TextBlock Text="Last Name:" Width="285"/>
            <TextBox x:Name="lastname" Width="285" Background="#FFD9D9D9" />

            <TextBlock Text="Username:" Width="285"/>
            <TextBox x:Name="username" Width="285" Background="#FFD9D9D9" />

            <TextBlock Text="Email:" Width="285"/>
            <TextBox x:Name="email" Width="285" Background="#FFD9D9D9" />

            <TextBlock Text="Password:" Width="285"/>
            <TextBox x:Name="password" Width="285" Background="#FFD9D9D9" Tag="{Binding Username}"/>









            <Button Content="Save Changes" Click="BtnSave_Click" Width="304" Background="#FF7CFF4D" BorderBrush="#FF03FF00" Margin="70,10,10,10"/>
            <Button Content="Back" Click="BtnBack_Click" Width="304" Background="#FFFF6161" BorderBrush="#FFFF4242" Margin="70,10,10,10"/>
        </StackPanel>
        <Label Content="FREEBET 3000 BOUNUSES" FontSize="40" FontWeight="Bold" HorizontalAlignment="Left" Margin="325,472,0,0"  VerticalAlignment="Top" Width="172"/>
    </Grid>
</Page>
