<Page x:Class="CasinoWPF.Pages.TransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasinoWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransactionPage">

    <Grid Background="White">
        <TextBlock x:Name="balanceBox" HorizontalAlignment="Center" FontWeight="Light" Margin="0,125,0,0" TextWrapping="Wrap" 
                   Text="{Binding Balance}" VerticalAlignment="Top" FontSize="16" Height="28" Width="100" Foreground="Black"/>
        <TextBox  x:Name="addbalance" Width="285" Height="65" Background="#FFD9D9D9" Margin="258,180,257,225" />
        <Button Content="Add Money" HorizontalAlignment="Center" Margin="0,315,0,0" VerticalAlignment="Top" Width="200" Height="33" Background="White" Click="AddBtn_Click" Foreground="Black"/>
        <Label FontSize="22" FontWeight="Heavy" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Content="How many bounuses you wanna add?" Foreground="Black"/>
        <Button Content="Back" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Width="200" Height="35" Background="#FFFF9B9B" Click="BackBtn_Click"/>

    </Grid>
</Page>
