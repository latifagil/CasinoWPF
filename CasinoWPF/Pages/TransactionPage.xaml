<Page x:Class="CasinoWPF.Pages.TransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CasinoWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransactionPage">

    <Grid Background="White">
        <TextBlock x:Name="balanceBox" HorizontalAlignment="Center" FontWeight="Light" Margin="0,125,0,0" TextWrapping="Wrap" 
                   Text="{Binding Balance}" VerticalAlignment="Top" FontSize="16" Height="28" Width="100"/>
        <TextBox x:Name="addbalance" HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="45"/>
        <Button Content="Add Money" HorizontalAlignment="Center" Margin="0,242,0,0" VerticalAlignment="Top" Width="201" Height="28" Background="White" Click="AddBtn_Click"/>
        <Label FontSize="22" FontWeight="Heavy" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Content="How many bounuses you wanna add?"/>
        <Button Content="Back" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="201" Height="28" Background="#FFFF9B9B" Click="BackBtn_Click"/>

    </Grid>
</Page>
